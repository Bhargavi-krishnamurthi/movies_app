<p><h2>Welcome Dear <%= @user.name %>!! </h2></p>
<p><h4> Email:</h4> <%= @user.email%></p>
<hr>

<% if @user.movies.present? %>
    <h4>Reviewed movies:</h4>
    <ul>
        <% @user.movies.each do |movie|%>
            <li><%= link_to movie.title.capitalize, movie_path(movie) %></li>
        <% end %>
    </ul>
<% end %>
<hr>
<% if @user.fav_movies.present? %>
    <h4>Favorite movies:</h4>
    <ul>
        <% @user.fav_movies.each do |movie|%>
            <li><%= link_to movie.title.capitalize, movie_path(movie) %></li>
        <% end %>
    </ul>
<% end %>
<hr>
<% if current_user? %>
    <div class= "actions">
        <%= link_to 'Edit Account', edit_user_path(@user) %> | <%= link_to 'Delete Account', user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete the account?"} %>
    </div>
<% end %>
