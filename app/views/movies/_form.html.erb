<%= render 'shared/errors', object: movie %>

<%= form_with(model: movie, local:true) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :rating %>
    <%= f.select :rating, Movie::RATINGS, prompt: "Pick one" %>

    <%= f.label :total_gross %>
    <%= f.text_field :total_gross %>

    <%= f.label :description %>
    <%= f.text_area :description, rows: 4 %>

    <%= f.label :released_on %>
    <%= f.date_select :released_on %>

    <%= f.label :director %>
    <%= f.text_field :director %>

    <%= f.label :duration %>
    <%= f.text_field :duration %>

    <%= f.label :genre %>
    <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name %>

    <%= f.label :poster %>
    <%= f.file_field :poster %>

    <%= f.submit %>
<% end %>