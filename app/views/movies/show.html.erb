<div>
    <center>
        <h1>Movie Details</h1> 
        <% if @movie.favoured_by?(current_user)%>
            <%= button_to "â¤ï¸ (#{@movie.fav_count})", movie_favs_path(@movie), method: :delete, class: :button %>
        <% else %>
            <%= button_to "ðŸ¤ (#{@movie.fav_count})", movie_favs_path(@movie), method: :post, class: :button %>
        <% end %>
    </center> 
    <br>
    <center><%= link_to 'Check Reviews â­', movie_reviews_path(@movie) %> | <%= link_to 'Give Review âœï¸', new_movie_review_path(@movie) %></center> 
    <div class= "align_right" style = "margin-left: -128px;"><%= link_to '<< Back to Collection', movies_path %></div>
